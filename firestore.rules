rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User data - each user can only read/write their own data
    match /users/{userId} {
      // User profile
      allow read, write: if isOwner(userId);

      // Vocabulary words
      match /vocabulary/{wordId} {
        allow read, write: if isOwner(userId);
      }

      // Bookmarks
      match /bookmarks/{bookmarkId} {
        allow read, write: if isOwner(userId);
      }

      // Reading history
      match /history/{entryId} {
        allow read, write: if isOwner(userId);
      }

      // Settings
      match /settings/{settingId} {
        allow read, write: if isOwner(userId);
      }

      // Reading plans
      match /readingPlans/{planId} {
        allow read, write: if isOwner(userId);
      }

      // Reading progress
      match /progress/{progressId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Feedback collection
    // - Any authenticated user can create feedback
    // - Users can read their own feedback (to see responses)
    // - Only admin API can read all feedback and update (via Firebase Admin SDK)
    match /feedback/{feedbackId} {
      // Allow creating feedback (authenticated or anonymous with email)
      allow create: if true;

      // Allow users to read their own feedback
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Updates only via Admin SDK (server-side)
      allow update, delete: if false;
    }
  }
}
